@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/StyleSheet.css" rel="stylesheet" />

    <title>Login</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script>
        $(document).ready(function () {
            $("#login-button").click(function () {

                $.get("/Login/LoginUser",
                    {
                        username: $("#username").val(),
                        password: $("#password").val()
                    },
                    function (data, status) {
                        data.indexOf("Error") !== -1 ?
                            $("#resultdiv").css("color", "red") :
                            $("#resultdiv").css("color", "green");

                        $("#resultdiv").html(data);
                        window.location.replace("/Main");
                    });
            });
            $("#reg-button").click(function () {
                $.get("/Login/RegisterUser",
                    {
                        username: $("#username").val(),
                        password: $("#password").val()
                    },
                    function (data, status) {
                        data.indexOf("Error") !== -1 ?
                            $("#resultdiv").css("color", "red") :
                            $("#resultdiv").css("color", "green");

                        $("#resultdiv").html(data);
                    });
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div id="resultdiv"></div>
        <form>
            <div class="form-group">
                <label for="username">Username: </label>
                <input class="form-control col-5" id="username" type="text" name="username">
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input class="form-control col-5" id="password" type="password" name="password">
            </div>
            <input id="login-button" class="btn btn-primary" type="button" value="Login" />
            <input id="reg-button" class="btn btn-secondary" type="button" value="Register" />
        </form>
    </div>

</body>
</html>
